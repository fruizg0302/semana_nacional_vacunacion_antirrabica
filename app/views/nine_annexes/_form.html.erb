<%= form_for(@nine_annex) do |f| %>
  <% if @nine_annex.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@nine_annex.errors.count, "error") %> prohibited this nine_annex from being saved:</h2>

      <ul>
      <% @nine_annex.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label "Número de municipios de la jurisdicción" %><br>
    <%= f.number_field :numero_municipios %>
  </div>
  <div class="field">
    <%= f.label "Número de municipios de la jurisdicción con IMSS-Próspera" %><br>
    <%= f.number_field :numero_municipios_imss_prospera %>
  </div>
  <br>
  <div class="row">
    <div class="alert alert-info" role="alert">Universo de perros y gatos en municipios responsabilidad de IMSS-Próspera</div>
  </div>

  <div class="field">
    <%= f.label "Perros" %><br>
    <%= f.number_field :universo_perros_imss_prospera %>
  </div>
  <div class="field">
    <%= f.label "Gatos" %><br>
    <%= f.number_field :universo_gatos_imss_prospera %>
  </div>
  <div class="field">
    <%= f.label "Total" %><br>
    <%= f.number_field :universo_total_imss_prospera, :readonly => true %>
  </div>
  <br>
  <div class="row">
    <div class="alert alert-info" role="alert">Total de perros y gatos en municipios responsabilidad de IMSS Prospera a vacunarse en SNVACyF</div>
  </div>
  <br>
  <div class="field">
    <%= f.label "Perros" %><br>
    <%= f.number_field :perros_vacunar_imss_prospera %>
  </div>
  <div class="field">
    <%= f.label "Gatos" %><br>
    <%= f.number_field :gatos_vacunar_imss_prospera %>
  </div>
  <div class="field">
    <%= f.label "Total" %><br>
    <%= f.number_field :total_vacunar_imss_prospera, :readonly => true %>
  </div>
  <div class="field">
    <%= f.label "Jurisdicción sanitaria" %> <br>
    <%= f.collection_select :jurisdiction_id, Jurisdiction.find(NineAnnex.available_jurisdictions(current_user.state_id)), :id, :jurisdiction_name, include_blank:false%>
  </div>
  <br>
  <div class="actions">
    <%= f.submit "Capturar Anexo 9"%>
  </div>
<% end %>
